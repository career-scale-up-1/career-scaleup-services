# Application Configuration
NODE_ENV=production
PORT=4000

# CORS Configuration
# Comma-separated list of allowed origins (e.g., "https://example.com,https://www.example.com")
CORS_ORIGIN=https://yourdomain.com

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/dbname?schema=public

# JWT Configuration
# Generate RSA key pair for JWT signing
# You can generate keys using: openssl genrsa -out private.pem 2048
# Then extract public key: openssl rsa -in private.pem -pubout -out public.pem
JWT_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\nYour private key here\n-----END RSA PRIVATE KEY-----"
JWT_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\nYour public key here\n-----END PUBLIC KEY-----"
JWT_EXPIRES_IN=7d
JWT_SECRET=your-jwt-secret-key-here

# Email Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_SECURE=false
MAIL_USER=your-email@gmail.com
MAIL_PASS=your-app-password
MAIL_FROM=noreply@yourdomain.com

# External API Configuration
# RapidAPI for job search
RAPID_API_KEY=your-rapidapi-key
RAPID_API_HOST=your-rapidapi-host
RAPID_API_JSEARCH_URL=https://jsearch.p.rapidapi.com

# Microservice URLs
BASE_MICROSERVICE_URL=https://your-microservice-url.com

# AI API Configuration
AI_API_BASE_URL=https://your-ai-api-url.com
